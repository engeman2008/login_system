<!doctype html>
<html lang="en">

<head>
    <title>Login</title>
    <%- include('../partials/head'); %>
    <link rel="stylesheet" type="text/css" href="css/login.css" />
</head>

<body>

    <div id="logreg-forms">
        <%- include('../partials/flash_messages'); %>

        <form class="form-signin" method="POST" action="/login">
            <h1 class="h3 mb-3 font-weight-normal" style="text-align: center"> Sign in</h1>
            <div class="social-login">
                <a class="btn facebook-btn social-btn" href="/auth/facebook" >
                    <span><i class="fab fa-facebook-f"></i> Sign in with Facebook</span> </a>
                <a class="btn google-btn social-btn" herf="/auth/google" >
                    <span><i class="fab fa-google-plus-g"></i> Sign in with Google+</span> </a>
            </div>
            <p style="text-align:center"> OR </p>
            <input type="email" name="email" id="email" class="form-control" placeholder="Email address" required=""
                autofocus="">
            <input type="password" name="password" id="password" class="form-control" placeholder="Password" required="">

            <button class="btn btn-success btn-block" type="submit"><i class="fas fa-sign-in-alt"></i> Sign in</button>
            <a href="/forget-password" id="forgot_pswd">Forgot password?</a>
            <hr>
            <a href="signup" class="btn btn-primary btn-block"><i class="fas fa-user-plus"></i>
                Sign up New Account</a>
        </form>
        <br>
    </div>
    <%- include('../partials/footer'); %>

</body>

</html>